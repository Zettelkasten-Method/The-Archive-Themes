{
    "name": "APG Colored Light",
    "style": "Light",
    "author": [
        {
            "name": "Philippe Gouillou",
            "X": "@neuromonaco",
            "url": "https://gouillou.com/",
            "comment": "This theme is inspired by Obsidian Minimal Theme with Catpuccin Color Scheme and Colorful Headings activated. Rem: the selector 'table' is not active in The Archive for the moment."
        }
    ],
    "version": "1.0 2024-11-16",

    "savedSearchesSidebar": {
        "color": "#3C3C3C",
        "backgroundColor": "#EDEDED",
        "highlightedBackgroundColor": "#C3E8F3",
        "border": false,
        "iconColors": {
            "default": "#B9B9B9"
        }
    },

    "resultsList": {
      "color": "#7E6E68",
      "backgroundColor": "#F0F1F5",
      "alternateBackgroundColor": "#343334",
      "selection": {
          "color": "#f2f2f2",
          "backgroundColor": "#626d80",
          "unfocusedColor": "#FFFFFF",
          "unfocusedBackgroundColor": "#B3B8CC"
      },
      "border": false
  },

    "editor": {
        "backgroundColor": "#F0F1F5",
        "caretColor": "#0080ff"
    },

    "styles": {
        "base": {
            "color": "#222222"
        },

        "h1": {
            "color": "#E64554",
            "font": {"style": "bold","relativeSize": "170%" },
            "syntax": { "color": "#AAAAAA" }
          },
          "h2": {
            "color": "#FE640C",
            "font": { "style": "bold", "relativeSize": "140%" },
            "syntax": { "color": "#AAAAAA" }
          },
          "h3": {
            "color": "#E08E1D",
            "font": { "style": "regular", "relativeSize": "130%" },
            "syntax": { "color": "#AAAAAA" }
          },
          "h4": {
            "color": "#45A12F",
            "font": { "relativeSize": "120%" },
            "syntax": { "color": "#AAAAAA" }
          },
          "h5": {
            "color": "#2066F6",
            "font": { "relativeSize": "110%" },
            "syntax": { "color": "#AAAAAA" }
          },
          "h6": {
            "color": "#E64554",
            "font": { "relativeSize": "105%" },
            "syntax": { "color": "#AAAAAA" }
          },

        
        "horizontalRule": {
            "color": "#0080ff"
        },

        "codeBlock": {
        	"color": "#2C434B",
        	"backgroundColor": "#f5f5f5",
            "font": { "name": "Lucida sans Typewriter", "relativeSize": "87%" }
    	  },
        "inlineCode": {
          "color": "#a51d1c",
          "font": { "name": "Lucida sans Typewriter", "relativeSize": "87%" }
    	  },

        "blockquote": {
            "indent": { "characters": 0 },
            "color": "#555555",
            "syntax": { "color": "#AAAAAA" }
        },

        "list": {
            "syntax": { "color" : "#AAAAAA" }
        },

        "emphasis": {
            "font": { "style": "italic" },
            "syntax": { "color": "#AAAAAA" }
        },
        "strong": {
            "font": { "style": "bold" },
            "syntax": { "color": "#AAAAAA" }
        },

        "image": {
            "color": "#555555"
        },

        "link": {
            "color": "#555555",
            "syntax": { "color" : "#AAAAAA" }
        },

        "referenceDefinition": {
            "color": "#555555"
        },

        "table": {
          "color": "#323232",
          "font": { "name": "Lucida sans Typewriter", "relativeSize": "87%" },
          "syntax": { "color": "#AAAAAA" }
      },

        "comment": {
            "color": "#AAAAAA",
            "font": { "style": "regular" }
        },
        
        "footnote": {
            "color": "#069393"
        }
    }
}
